    "@fn2/cors-worker": "0.2.0",
    "@fn2/loaded": "0.30.0",
    "@fn2/logger": "0.10.0",
    "@fn2/patch": "0.10.0",
    "@fn2/render": "0.11.0",
    "@fn2/router": "0.6.0",
    "@fn2/ssr": "0.15.0",
    "@fn2/tiny-id": "0.5.0",
    "globby": "10.0.1",
    "undom": "0.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
